<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="CodeChallenge\Domain\Model\Cart\Cart" table="cart">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="shoppingCartId" column="shoppingCartId" type="string" length="64" />
        <field name="product_id" column="product_id" type="integer" />
        <field name="quantity" column="quantity" type="integer" />
        <field name="at_price" column="at_price" type="float" />
    </entity>
</doctrine-mapping>
